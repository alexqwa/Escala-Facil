generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Scale {
  id           Int           @id @default(autoincrement())
  title        String
  month        String
  year         String
  periodScale  String
  colaborators Colaborator[]

  @@map("scales")
}

model Colaborator {
  id      Int      @id @default(autoincrement())
  name    String
  turn    Boolean
  sunday  DateTime @default(now())
  weekday Int[]
  scaleId Int
  scale   Scale    @relation(fields: [scaleId], references: [id], onDelete: Cascade)

  @@map("colaborators")
}
