generator client {
  provider = "prisma-client-js"
  output   = "app/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Scale {
  id           Int           @id @default(autoincrement())
  user         String
  title        String
  month        String
  year         String
  periodScale  String
  colaborators Colaborator[]

  @@map("scales")
}

model Colaborator {
  id      Int      @id @default(autoincrement())
  name    String
  turn    Boolean
  woman   Boolean
  sunday  DateTime @default(now())
  weekday Int[]
  scaleId Int
  scale   Scale    @relation(fields: [scaleId], references: [id], onDelete: Cascade)

  @@map("colaborators")
}
